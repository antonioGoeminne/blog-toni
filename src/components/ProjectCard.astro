---
const { project } = Astro.props;
const { title, sub_title, tech_stack, link } = project;
---

<a
  target="_blank"
  href={link}
  class="border px-4 py-3 rounded-md hover:shadow-xl hover:scale-105 transition-all"
>
  <div class="flex flex-col gap-1 cursor-pointer">
    <div class="flex flex-col gap-2 md:gap-0 md:flex-row justify-between">
      <div>
        <p class="text-md">{title}</p>
        <p class="text-xs text-gray-400">{sub_title}</p>
      </div>
      <p class="text-sm text-gray-300">{tech_stack}</p>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-4 h-4 text-secondary"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="m4.5 19.5 15-15m0 0H8.25m11.25 0v11.25"></path>
      </svg>
    </div>
  </div>
</a>
